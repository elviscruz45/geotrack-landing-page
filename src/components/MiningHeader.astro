---
// You can import your logo if needed
// import { Image } from 'astro:assets';
// import logoImage from '../assets/logo.svg';
---

<header class="fixed z-50 w-full bg-black/80 backdrop-blur-sm">
  <div class="container mx-auto flex items-center justify-between px-4 py-3">
    <div class="flex items-center">
      <!-- If using static assets: -->
      <img
        src="/logo.svg"
        alt="Company Logo"
        width="40"
        height="40"
        class="mr-2"
      />
      <!-- If using imported assets:
      <Image src={logoImage || "/placeholder.svg"} alt="Company Logo" width={40} height={40} class="mr-2" />
      -->
      <span class="text-xl font-bold text-white">YOURCOMPANY</span>
    </div>

    <nav class="hidden items-center space-x-6 md:flex">
      <a href="/" class="text-white transition hover:text-teal-400">Home</a>
      <span class="text-gray-500">|</span>
      <a href="/products" class="text-white transition hover:text-teal-400"
        >Products</a
      >
      <span class="text-gray-500">|</span>
      <a href="/services" class="text-white transition hover:text-teal-400"
        >Services</a
      >
      <span class="text-gray-500">|</span>
      <a href="/experience" class="text-white transition hover:text-teal-400"
        >Experience</a
      >
      <span class="text-gray-500">|</span>
      <a href="/about" class="text-white transition hover:text-teal-400"
        >About Us</a
      >
      <span class="text-gray-500">|</span>
      <a href="/contact" class="text-white transition hover:text-teal-400"
        >Contact</a
      >
    </nav>

    <div class="flex items-center space-x-2">
      <a href="/en" class="w-6"><img src="/flags/en.png" alt="English" /></a>
      <a href="/fr" class="w-6"><img src="/flags/fr.png" alt="French" /></a>
      <a href="/es" class="w-6"><img src="/flags/es.png" alt="Spanish" /></a>
      <button class="text-white md:hidden" id="menu-toggle">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </div>
</header>

<div class="mobile-menu fixed inset-0 z-40 hidden bg-black/95 md:hidden">
  <div
    class="flex h-full flex-col items-center justify-center space-y-6 text-xl"
  >
    <a href="/" class="text-white transition hover:text-teal-400">Home</a>
    <a href="/products" class="text-white transition hover:text-teal-400"
      >Products</a
    >
    <a href="/services" class="text-white transition hover:text-teal-400"
      >Services</a
    >
    <a href="/experience" class="text-white transition hover:text-teal-400"
      >Experience</a
    >
    <a href="/about" class="text-white transition hover:text-teal-400"
      >About Us</a
    >
    <a href="/contact" class="text-white transition hover:text-teal-400"
      >Contact</a
    >
    <button id="close-menu" class="absolute right-6 top-6 text-white">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>
</div>

<script>
  // Mobile menu toggle
  document.getElementById("menu-toggle")?.addEventListener("click", () => {
    document.querySelector(".mobile-menu")?.classList.remove("hidden");
  });

  document.getElementById("close-menu")?.addEventListener("click", () => {
    document.querySelector(".mobile-menu")?.classList.add("hidden");
  });
</script>
